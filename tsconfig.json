{
  "compilerOptions": {
      "allowJs": true,
      "baseUrl": "src",
      "allowSyntheticDefaultImports": true,
      "declaration": true,
      "declarationMap": true,
      "esModuleInterop": true,
      "lib": ["DOM", "es6"],
      // "lib": ["DOM", "DOM.Iterable", "ESNext"],  // Add DOM.Iterable and ESNext
      "jsx": "react-jsx",
      "module": "esnext",
      "moduleResolution": "bundler",
      "outDir": "dist",
      "paths": {
          // avoid ../../../../foo type import paths
          "/@/*": ["./*"],
      },
      "removeComments": true,
      "skipLibCheck": true,
      "sourceMap": true,
      "strict": true,
      "target": "es2020",
      "types": ["react", "node"],
      "typeRoots": ["node_modules/@types"],
  },
  "include": ["src/**/*.ts"]
}
